{% extends 'HelpBundle::layout.html.twig' %}

{% block breadcrumbs_parent %}<li><a href="{{ path('ant_help_stepper_index') }}">{{ 'Paso a paso' | trans }}</a></li>{% endblock %}
{% block breadcrumbs_actually %}{{ 'Change nick step by step chat flash' | trans }}{% endblock %}

{% block add_custom_styles_head_css %}
